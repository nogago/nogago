--><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent"
  android:layout_width="fill_parent"
  android:orientation="vertical" >
  
  <View
    android:background="@color/actionBarSeperator"
    android:layout_height="1dp"
    android:layout_width="fill_parent" />
<ScrollView style="@style/ScrollView" 
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:layout_weight="1" >
  <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:padding="8dp" >
    <TextView
      android:id="@+id/marker_detail_name"
      style="@style/TextLarge" />
    <LinearLayout
      android:id="@+id/marker_detail_waypoint_section"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:orientation="vertical" >
      <TextView
        android:id="@+id/marker_detail_waypoint_marker_type"
        style="@style/TextLarge.WithTopMargin" />
      <TextView
        android:id="@+id/marker_detail_waypoint_description"
        style="@style/TextLarge.WithTopMargin" />
    </LinearLayout>
    <LinearLayout
      android:id="@+id/marker_detail_statistics_section"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:orientation="vertical" >
      <TextView
        android:text="@string/marker_detail_statistics_title"
        style="@style/TextLarge.WithTopMargin" />
      <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="8dp"
        android:shrinkColumns="0,2"
        android:stretchColumns="0,2" >
        <include layout="@layout/stats_core" />
      </TableLayout>
    </LinearLayout>
  </LinearLayout>
</ScrollView>
    <!--  Start of the actionBar  -->
  <View
    android:background="@color/actionBarSeperator"
    android:layout_height="1dp"
    android:layout_width="fill_parent" />
  <LinearLayout
   	  android:id="@+id/track_controller_container"
      android:layout_width="fill_parent"
      android:orientation="horizontal"
      android:layout_height="101px"
      android:paddingTop="10px"
      android:paddingBottom="10px"
      android:background="@color/actionBarBG">

      <ImageButton
          android:id="@+id/listBtnBarBack"
          android:layout_width="0dp"
          android:layout_weight="1"
        android:layout_height="wrap_content"
          android:src="@drawable/ic_previous"
          android:layout_margin="0dp"
      android:background="@color/actionBarBG"
          android:scaleType="centerInside" />

      <ImageButton
          android:id="@+id/listBtnBarShowOnMap"
          android:layout_width="0dp"
          android:layout_weight="1"
        android:layout_height="wrap_content"
   android:src="@drawable/ic_map"
          
      android:background="@color/actionBarBG"
          android:scaleType="centerInside" />

      <ImageButton
          android:id="@+id/listBtnBarEdit"
          android:layout_width="0dp"
          android:layout_weight="1"
        android:layout_height="wrap_content"
    android:src="@drawable/ic_edit"
          
      android:background="@color/actionBarBG"
          android:scaleType="centerInside"  />
      
      <ImageButton
          android:id="@+id/listBtnBarDelete"
          android:layout_width="0dp"
          android:layout_weight="1"
        android:layout_height="wrap_content"
    android:src="@drawable/ic_delete"
          
      android:background="@color/actionBarBG"
          android:scaleType="centerInside"  />


</LinearLayout>
</LinearLayout>